{
  "npmClient": "yarn",
  "packages": [
    "frontend",
    "backend"
  ],
  "version": "0.2.0",
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "allowBranch": "main",
      "ignoreChanges": [
        "*.test.js",
        "*.test.ts",
        "*.test.tsx",
        "*.md"
      ],
      "conventionalCommits": true
    },
    "version": {
      "conventionalCommits": true
    }
  }
}
